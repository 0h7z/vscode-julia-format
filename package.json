{
	"name": "vscode-julia-format",
	"displayName": "Julia Formatter",
	"publisher": "0h7z",
	"icon": "icon.ico",
	"license": "AGPL-3.0-or-later",
	"repository": {
		"type": "git",
		"url": "https://github.com/0h7z/vscode-julia-format"
	},
	"issues": {
		"url": "https://github.com/0h7z/vscode-julia-format/issues"
	},
	"description": "A formatter for the Julia language",
	"version": "1.0.1",
	"engines": {
		"vscode": "^1.72.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:julia"
	],
	"keywords": [
		"julia",
		"format",
		"style"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Julia Formatter",
			"properties": {
				"julia-format.args": {
					"type": "string",
					"default": "--compile=min",
					"description": "Command line argument(s) for Julia."
				},
				"julia-format.flag": {
					"type": "string",
					"default": "indent = 4, margin = 256, always_for_in = true, whitespace_typedefs = true, import_to_using = true, align_struct_field = true, align_conditional = true, align_assignment = true, align_pair_arrow = true, normalize_line_endings = \"unix\", align_matrix = true, indent_submodule = true, surround_whereop_typeparameters = false",
					"description": "Flag(s) for Julia Formatter."
				},
				"julia-format.tabs": {
					"type": "number",
					"default": 4,
					"minimum": 0,
					"markdownDescription": "Tab size, should be the same as `indent`'s value in `#julia-format.flag#`. Otherwise, set this to 0 to use space(s)."
				}
			}
		}
	},
	"scripts": {
		"npm": "npm i && npm ci && npm up",
		"all": "pnpm compile && pnpm build && pnpm package",
		"package": "vsce package && julia mv.jl",
		"build": "pnpm esbuild --minify",
		"compile": "tsc -p ./",
		"esbuild": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild-debug": "pnpm esbuild --sourcemap",
		"esbuild-watch": "pnpm esbuild --sourcemap --watch",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/diff": "^5.0.2",
		"@types/node": "^18.8.5",
		"@types/vscode": "~1.72.0",
		"esbuild": "^0.15.10",
		"typescript": "^4.8.4",
		"vsce": "^2.11.0"
	},
	"dependencies": {
		"@rauschma/stringio": "^1.4.0",
		"child_process": "^1.0.2",
		"diff": "^5.1.0",
		"untildify": "^4.0.0",
		"util": "^0.12.4"
	}
}
